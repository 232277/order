<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="280dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/toollibrary_background_gray"
    android:padding="@dimen/dp_4">

    <ImageView
        android:id="@+id/btn_1"
        style="@style/toollibraryAmountNumberStyle"
        android:src="@mipmap/n1"
        android:scaleType="centerInside"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btn_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_2" />

    <ImageView
        android:id="@+id/btn_2"
        style="@style/toollibraryAmountNumberStyle"
        android:layout_marginTop="4dp"
        android:src="@mipmap/n2"
        android:scaleType="centerInside"
        app:layout_constraintStart_toEndOf="@+id/btn_1"
        app:layout_constraintEnd_toStartOf="@id/btn_3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_5"/>

    <ImageView
        android:id="@+id/btn_3"
        style="@style/toollibraryAmountNumberStyle"
        android:layout_marginTop="4dp"
        android:src="@mipmap/n3"
        android:scaleType="centerInside"
        app:layout_constraintStart_toEndOf="@+id/btn_2"
        app:layout_constraintEnd_toStartOf="@+id/delete"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_6"/>

    <ImageView
        android:id="@+id/delete"
        style="@style/toollibraryAmountNumberStyle"
        android:layout_marginTop="4dp"
        android:src="@mipmap/keyboard_del"
        android:scaleType="centerInside"
        app:layout_constraintStart_toEndOf="@id/btn_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/clear"/>


    <ImageView
        android:id="@+id/btn_4"
        style="@style/toollibraryAmountNumberStyle"
        android:layout_marginStart="4dp"
        android:src="@mipmap/n4"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_5"
        app:layout_constraintTop_toBottomOf="@id/btn_1"
        app:layout_constraintBottom_toTopOf="@id/btn_7"/>

    <ImageView
        android:id="@+id/btn_5"
        style="@style/toollibraryAmountNumberStyle"
        android:src="@mipmap/n5"
        android:scaleType="centerInside"
        app:layout_constraintStart_toEndOf="@id/btn_4"
        app:layout_constraintEnd_toStartOf="@id/btn_6"
        app:layout_constraintTop_toBottomOf="@id/btn_2"
        app:layout_constraintBottom_toTopOf="@id/btn_8"/>

    <ImageView
        android:id="@+id/btn_6"
        style="@style/toollibraryAmountNumberStyle"
        android:src="@mipmap/n6"
        android:scaleType="centerInside"
        app:layout_constraintStart_toEndOf="@id/btn_5"
        app:layout_constraintEnd_toStartOf="@id/clear"
        app:layout_constraintTop_toBottomOf="@id/btn_3"
        app:layout_constraintBottom_toTopOf="@id/btn_9"/>

    <TextView
        android:id="@+id/clear"
        style="@style/toollibraryAmountNumberStyle"
        android:text="@string/toolibrary_btn_clear"
        android:textSize="17sp"
        android:textColor="#262626"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@id/btn_6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/delete"
        app:layout_constraintBottom_toTopOf="@id/confirm"/>

    <ImageView
        android:id="@+id/btn_7"
        style="@style/toollibraryAmountNumberStyle"
        android:layout_marginStart="4dp"
        android:src="@mipmap/n7"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_8"
        app:layout_constraintTop_toBottomOf="@id/btn_4"
        app:layout_constraintBottom_toTopOf="@id/zeroLeft"/>

    <ImageView
        android:id="@+id/btn_8"
        style="@style/toollibraryAmountNumberStyle"
        android:src="@mipmap/n8"
        android:scaleType="centerInside"
        app:layout_constraintStart_toEndOf="@id/btn_7"
        app:layout_constraintEnd_toStartOf="@id/btn_9"
        app:layout_constraintTop_toBottomOf="@id/btn_5"
        app:layout_constraintBottom_toTopOf="@id/btn_0"/>

    <ImageView
        android:id="@+id/btn_9"
        style="@style/toollibraryAmountNumberStyle"
        android:src="@mipmap/n9"
        android:scaleType="centerInside"
        app:layout_constraintStart_toEndOf="@id/btn_8"
        app:layout_constraintEnd_toStartOf="@id/confirm"
        app:layout_constraintTop_toBottomOf="@id/btn_6"
        app:layout_constraintBottom_toTopOf="@id/zeroRight"/>

    <TextView
        android:id="@+id/confirm"
        style="@style/toollibraryAmountConfirmNumberStyle"
        android:text="@string/toolibrary_btn_confirm"
        android:textSize="17sp"
        android:textColor="@color/toollibrary_white"
        android:gravity="center"
        android:layout_marginEnd="@dimen/dp_4"
        android:layout_marginBottom="8dp"
        app:layout_constraintStart_toEndOf="@id/btn_9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/clear"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/zeroLeft"
        style="@style/toollibraryAmountNumberStyle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_0"
        app:layout_constraintTop_toBottomOf="@id/btn_7"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"/>

    <ImageView
        android:id="@+id/btn_0"
        style="@style/toollibraryAmountNumberStyle"
        android:src="@mipmap/n0"
        android:scaleType="centerInside"
        app:layout_constraintStart_toEndOf="@id/zeroLeft"
        app:layout_constraintEnd_toStartOf="@id/zeroRight"
        app:layout_constraintTop_toBottomOf="@id/btn_8"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/zeroRight"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:background="@drawable/toollibrary_bg_number_style"
        app:layout_constraintStart_toEndOf="@id/btn_0"
        app:layout_constraintEnd_toStartOf="@id/confirm"
        app:layout_constraintTop_toBottomOf="@id/btn_9"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="@dimen/dp_4"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_marginBottom="@dimen/dp_4"/>

</androidx.constraintlayout.widget.ConstraintLayout>
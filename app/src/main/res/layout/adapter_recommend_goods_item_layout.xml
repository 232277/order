<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="3.5dp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/img"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/pic_no_picture"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="82.5dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/img"
        app:layout_constraintTop_toTopOf="@id/img"
        android:layout_marginStart="5dp"
        android:text="榛子巧克力"
        android:textSize="12sp"
        android:textColor="@color/normal_item_text_color_light"
        android:includeFontPadding="false"/>

    <TextView
        android:id="@+id/specialPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/name"
        app:layout_constraintTop_toBottomOf="@id/name"
        app:layout_constraintBottom_toTopOf="@id/oriPrice"
        android:text="￥20.00"
        android:textSize="14sp"
        android:textColor="@color/dialog_price_text_red"
        android:includeFontPadding="false"/>

    <TextView
        android:id="@+id/oriPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/name"
        app:layout_constraintBottom_toBottomOf="@id/img"
        android:layout_marginTop="6.5dp"
        android:text="￥25.00"
        android:textSize="9sp"
        android:textColor="@color/normal_item_text_color_gray"
        android:includeFontPadding="false"/>

</androidx.constraintlayout.widget.ConstraintLayout>
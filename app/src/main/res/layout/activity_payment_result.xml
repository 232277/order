<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dyc.order.cashier.mvp.activity.payment.PaymentResultActivity">

    <TextView
        android:id="@+id/countDownStr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="13dp"
        android:layout_marginTop="12dp"/>


    <TextView
        android:id="@+id/payRes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_payment_pay_success"
        android:textSize="17sp"
        android:textColor="@color/normal_item_text_color_black"
        android:includeFontPadding="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="107dp"/>

    <TextView
        android:id="@+id/amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ï¿¥100.00"
        android:textSize="36sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textColor="@color/dialog_price_text_red"
        android:includeFontPadding="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/payRes"/>

    <ImageView
        android:id="@+id/img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/img_payment_success"
        android:scaleType="centerCrop"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/amount"/>

    <Button
        android:id="@+id/gotIt"
        android:layout_width="340dp"
        android:layout_height="43dp"
        android:layout_marginTop="44dp"
        android:text="@string/label_payment_got_it"
        android:textColor="@color/toollibrary_white"
        android:textSize="15sp"
        android:background="@drawable/circle_corner_dialog_confirm_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img"
        android:stateListAnimator="@null"/>

</androidx.constraintlayout.widget.ConstraintLayout>